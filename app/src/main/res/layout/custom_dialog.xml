<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fingerprint_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprint_description"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@mipmap/thumb"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fingerprint_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingerprint_description"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/touchid"
        android:textColor="@color/c29"
        android:textSize="@dimen/nav_large_text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_dia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:text="@string/touch_id_signin_confirmation_step1"
        android:textColor="@color/c29"
        android:textSize="@dimen/nav_smallest_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_notOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="@string/yes"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="-5dp"
            android:textSize="@dimen/nav_large_text"
            android:textColor="@color/c26" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="@string/no"
            android:layout_weight="1"
            android:textColor="@color/c26"
            android:textSize="@dimen/nav_large_text" />
    </LinearLayout>

</LinearLayout>